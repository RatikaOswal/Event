<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.event.eventapp.activity.DiscriptionOfItem"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/CoverView"
        android:background="@drawable/image_background"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:paddingTop="10dp"
        android:paddingBottom="3dp"
        android:textSize="20sp"
        android:id="@+id/event_time"
        android:textColor="@color/Text_time"
        android:textAllCaps="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/CoverView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This is the Title"
        android:id="@+id/event_name"
        android:layout_below="@+id/event_time"
        android:textSize="40dp"
        android:paddingBottom="10dp"
        android:textColor="@color/Text_title"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/actionMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        fab:menu_backgroundColor="#b2000000"
        fab:menu_icon="@drawable/add"
        fab:menu_labels_colorNormal="@color/white"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_labels_textColor="@color/Text_title"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/flagbut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fab_colorNormal="@color/overlayBlue"
            fab:fab_label="@string/bookmark"
            fab:fab_size="normal"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/sharebut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fab_colorNormal="@color/overlayBlue"
            fab:fab_label="@string/share"
            fab:fab_size="normal"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/snapbut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/snap"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fab_colorNormal="@color/overlayBlue"
            fab:fab_label="@string/snap"
            fab:fab_size="normal"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/registerbut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fab_colorNormal="@color/overlayBlue"
            fab:fab_label="@string/register"
            fab:fab_size="normal"
            />
</com.github.clans.fab.FloatingActionMenu>>

</RelativeLayout>

