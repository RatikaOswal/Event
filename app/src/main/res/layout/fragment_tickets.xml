<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ticket"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ht.event.fragments.TicketsFragment">



    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/saveInfo"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Text_venue"
            android:textSize="30sp"
            android:text="@string/tic"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:id="@+id/tic"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Text_title"
            android:text="@string/ticc"
            android:id="@+id/ticc"
            android:layout_below="@+id/tic"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Text_title"
            android:text="@string/ticcc"
            android:layout_below="@+id/ticc"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="17sp"
            android:id="@+id/ticcc"
            android:layout_centerHorizontal="true"
            android:paddingBottom="50dp"
            />

        <TextView
            android:id="@+id/discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/overlayBlue"
            android:layout_centerHorizontal="true"
            android:text="@string/discover"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_alignBottom="@+id/ticcc"

            />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/saved_ticket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@android:color/transparent"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
</FrameLayout>
