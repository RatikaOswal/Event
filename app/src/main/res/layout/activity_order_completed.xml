<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ht.event.activity.OrderCompletedActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/ordercompbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/overlayBlue"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/done"
        android:text="@string/done"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        />

    <RelativeLayout
        android:layout_below="@+id/ordercompbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@color/fragment_backgrnd"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/orderCompleted"
        android:background="@color/white"
        android:paddingTop="30dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/Text_title"
        android:layout_marginTop="10dp"
        android:id="@+id/ordercomp"/>

    <TextView
        android:id="@+id/compTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textStyle="bold"
        android:layout_below="@+id/ordercomp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="20dp"
        android:textSize="30sp"
        android:textColor="@color/Text_title"
        android:layout_marginBottom="1dp"
        />
    <RelativeLayout
        android:id="@+id/addC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/compTitle"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="20dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_calendar_icon"
            android:id="@+id/cal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeComp"
            android:text="@string/time"
            android:textAllCaps="true"
            android:layout_toRightOf="@+id/cal"
            android:textColor="@color/Text_title"
            android:layout_centerVertical="true"

             />

        <TextView
            android:id="@+id/add"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange6"
            android:text="@string/add"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addC"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/viewc"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_ticket"
            android:id="@+id/tick"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ticketComp"
            android:text="@string/tickets"
            android:textAllCaps="true"
            android:layout_toRightOf="@+id/tick"
            android:textColor="@color/Text_title"
            android:layout_centerVertical="true"

            />

        <TextView
            android:id="@+id/view"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange6"
            android:text="@string/view"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewc"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/invite"
            android:text="@string/invite"
            android:textAllCaps="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="@color/Text_title"
            android:paddingLeft="71dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_share_org"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</RelativeLayout>


    </RelativeLayout>
