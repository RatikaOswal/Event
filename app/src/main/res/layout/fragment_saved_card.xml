<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="2dp"
    card_view:cardBackgroundColor="@color/white"
    android:descendantFocusability="blocksDescendants"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/CoverView"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:background="@drawable/image_background">

        </ImageView>

        <TextView
            android:id="@+id/price"
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:background="@color/transparent_black"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Text_time"
            android:textAllCaps="true"
            android:paddingLeft="15dp"
            android:text="Date and Time"
            android:textSize="16sp"
            android:textStyle="normal"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:typeface="sans"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/price"
            android:layout_toRightOf="@+id/CoverView"
            android:layout_toEndOf="@+id/CoverView" />

        <TextView
            android:id="@+id/event_name"
            android:text="Tile of Event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Text_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:typeface="sans"
            android:gravity="center"
            android:layout_below="@+id/event_time"
            android:layout_alignLeft="@+id/event_time"
            android:layout_alignStart="@+id/event_time" />

        </RelativeLayout>

</android.support.v7.widget.CardView>
    </RelativeLayout>