<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.ht.event.fragments.InfoFragment"

    >
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/CoverView"
        android:background="@drawable/image_background"
        >
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This is the Title"
        android:id="@+id/event_name"
        android:textSize="35dp"
        android:padding="10dp"
        android:background="@color/white"
        android:textColor="@color/Text_title"
        android:textStyle="normal"
        android:gravity="center"
        android:typeface="sans"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/fragment_backgrnd"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:gravity="center"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_calendar_icon"
            android:layout_centerVertical="true"
            >
            </ImageView>
        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Text_time"
            android:textAllCaps="true"
            android:paddingLeft="15dp"
            android:text="Date and Time"
            android:textSize="14sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/calender"
            android:layout_toEndOf="@+id/calender" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fragment_backgrnd"
        android:layout_gravity="center" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/text_discription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_backgrnd"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textDiscription"
            android:textColor="@color/Text_time"
            android:maxLines="5"
            android:typeface="sans"
            android:paddingBottom="10dp"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            android:id="@+id/description" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/learnMore"
            android:background="@color/white"
            android:textColor="@color/overlayBlue"
            android:typeface="sans"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="17sp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/fragment_backgrnd"
        android:layout_gravity="center" />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/mapLayout"
        android:orientation="vertical"
        >
    <fragment
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/maplocationstatic"
        android:background="@color/white"
        android:name="com.google.android.gms.maps.MapFragment"
        >
    </fragment>

    <TextView
        android:id="@+id/venue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/venue"
        android:textColor="@color/Text_title"
        android:textSize="20sp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:typeface="sans"

        />

    <TextView
        android:id="@+id/venueAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/venueAddress"
        android:textColor="@color/Text_time"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:typeface="sans"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="bottom" />

        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/fragment_backgrnd"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


    <TextView
        android:id="@+id/organisationName"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:textColor="@color/Text_title"
        android:text="@string/organisationTitle"
        android:textStyle="bold"
        android:textSize="22sp"
        android:typeface="sans"
        android:gravity="center"
        android:padding="10dp" />
        </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/fragment_backgrnd"
                android:layout_gravity="center" />
    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
    >
        <ImageView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_message"
            android:layout_alignTop="@+id/contact"
            android:layout_toLeftOf="@+id/contact"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/contact">
        </ImageView>

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/overlayBlue"
            android:textAllCaps="true"
            android:paddingLeft="15dp"
            android:text="@string/contact"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/fragment_backgrnd"
        android:layout_gravity="center" />

</LinearLayout>
</ScrollView>
