<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.event.eventapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.ht.event.application.FbApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.ht.event.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ht.event.activity.DiscriptionOfItem"
            android:label="@string/title_activity_discription_of_item" >
        </activity>
        <activity
            android:name="com.ht.event.activity.Registration"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.ht.event.activity.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
    </application>

</manifest>
